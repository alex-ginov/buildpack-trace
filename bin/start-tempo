#!/bin/bash
set -e

# Chemin d'accès racine de l'application
APP_DIR="/app"

# Le chemin du fichier de configuration dans le slug
CONFIG_FILE="${APP_DIR}/config/tempo.yaml"

echo "===== STARTING TEMPO ====="
echo "PORT: ${PORT}" 

# 1. Vérification des fichiers et du binaire
if [ ! -x "${APP_DIR}/bin/tempo" ]; then
  echo "Error: Tempo binary not found or not executable!" >&2
  exit 1
fi
if [ ! -f "${CONFIG_FILE}" ]; then
  echo "Error: Configuration file ${CONFIG_FILE} not found!" >&2
  exit 1
fi

# 2. Créer les répertoires de stockage dans /tmp/
STORAGE_DIR="/tmp/tempo-data"
mkdir -p "${STORAGE_DIR}/wal"
mkdir -p "${STORAGE_DIR}/blocks"
echo "Storage directories created/verified in ${STORAGE_DIR}"

# 3. Lancer Tempo
echo "-----> Launching Tempo..."
# Note : Nous surchargeons explicitement le port HTTP du serveur principal.
# Dans ce cas, Tempo peut lier le port $PORT pour le serveur principal ET le récepteur OTLP/HTTP.
# Si Tempo ne peut pas lier deux services différents sur le même port, le service OTLP HTTP
# défini dans le fichier YML sera prioritaire.
exec "${APP_DIR}/bin/tempo" \
  --config.file="${CONFIG_FILE}" \
  --server.http-listen-port="${PORT:-3200}"